<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Profile Setup</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">

  <div class="w-full max-w-md bg-white shadow-xl rounded-xl p-6">
    <h2 class="text-2xl font-bold text-center mb-6">
      Complete Your Profile ðŸš€
    </h2>

    <form 
      action="/profile/setup" 
      method="POST" 
      enctype="multipart/form-data"
      class="space-y-4"
    >

      <!-- Avatar -->
      <div class="flex flex-col items-center">
        <img 
          id="avatarPreview"
          src="/images/default-avatar.png"
          class="w-24 h-24 rounded-full border mb-2 object-cover"
        />
        <input 
          type="file" 
          name="avatar"
          accept="image/*"
          class="text-sm"
          onchange="previewAvatar(event)"
        />
      </div>

      <!-- Username -->
      <div>
        <label class="block text-sm font-medium">Username</label>
        <input 
          type="text" 
          name="username"
          placeholder="Enter username"
          required
          class="w-full mt-1 p-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-300"
        />
      </div>

      <!-- Email -->
      <div>
        <label class="block text-sm font-medium">Email</label>
        <input 
          type="email" 
          name="email"
          readonly
          value="aliahemdmansoori@13.com"
          class="w-full  mt-1 p-2 border rounded-lg bg-gray-100 cursor-not-allowed"
        />
      </div>

      <!-- Gender -->
      <div>
        <label class="block text-sm font-medium">Gender</label>
        <select 
          name="gender"
          required
          class="w-full mt-1 p-2 border rounded-lg"
        >
          <option value="">Select</option>
          <option value="Male">Male</option>
          <option value="Female">Female</option>
        </select>
      </div>

      <!-- Bio -->
      <div>
        <label class="block text-sm font-medium">Bio</label>
        <textarea 
          name="bio"
          rows="3"
          placeholder="Tell something about yourself..."
          class="w-full mt-1 p-2 border rounded-lg resize-none"
        ></textarea>
      </div>

      <!-- Submit -->
      <button 
        type="submit"
        class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition"
      >
        Save Profile âœ…
      </button>

    </form>
  </div>

  <!-- Avatar Preview Script -->
  <script>
    function previewAvatar(event) {
      const img = document.getElementById("avatarPreview");
      img.src = URL.createObjectURL(event.target.files[0]);
    }
  </script>

</body>
</html>

